#include <iostream>
using namespace std;

int main() {
	
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    for(int i=0;i<n;i++)
	    cin>>t[i];
	    
	    for(int i=0;i<n;i++)
	    cin>>students[i];
	    
	    int count=0;
	    if(t[0]>student[i])
	    ++count;
	    
	    for(int i=1;i<n;i++)
	    {
	        int diff=t[i]-t[t-1];
	        if(diff>=student[i])
	        ++count;
	    }
	    cout<<count<<endl;
	}
	return 0;
}
